{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": "off"
			},
			"nursery": {
				"useImportRestrictions": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["./src/lib/db/types"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
